<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" navigatedTo="navigatedTo" actionBarHidden="true">

  <StackLayout cssClass="container" height="auto" horizontalAlignment="stretch">
    <StackLayout cssClass="header-top" orientation="horizontal" horizontalAlignment="center">
      <Image src="~/images/ui/logo.png" stretch="none" horizontalAlignment="left" />
      <Label cssClass="header-title" text="MENU PAGE" horizontalAlignment="center"/>
    </StackLayout>
    <ListView items="{{ listItems }}"
              itemTap="{{ listViewItemTap }}" 
              cssClass="viewList" separatorColor="rgba(#FF000055)" >

      <ListView.itemTemplate >
        <StackLayout orientation="vertical"    cssClass="menuItem">
          <DockLayout stretchLastChild="true" cssClass="menuItem-inner">
            <Label text="{{title}}" cssClass="title" dock="left" horizontalAlignment="left"/>
            <Label text="{{contentTypeId}}" cssClass="id-type" dock="left" horizontalAlignment="right" />
            <Label text="{{itemId}}" cssClass="id-item" horizontalAlignment="right" />
          </DockLayout>
        </StackLayout>
      </ListView.itemTemplate>

    </ListView>

  </StackLayout>

</Page>