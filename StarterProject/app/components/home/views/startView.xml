
<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">

  <StackLayout cssClass="container" height="auto" horizontalAlignment="stretch">
    <!-- placeholder -->
    <Label text="" horizontalAlignment="center" height="30px;"/>
    <!-- placeholder -->

    <ListView items="{{ listImages }}"
              itemTap="{{ listViewItemTap }}" 
              cssClass="viewList" separatorColor="rgba(#FF000000)" >

      <ListView.itemTemplate >

        <StackLayout orientation="vertical"  cssClass="menuItem" style.border-width="2px" style.border-color="4px;">
          <DockLayout  style.backgroundColor="#EBEBEB" stretchLastChild="true" margin="1px 0" padding="22px 0">
            <Label text="{{title}}"   dock="left" cssClass="label"         horizontalAlignment="left"/>
            <Label  text="{{contentTypeId}}"    cssClass="labelRight"    horizontalAlignment="right" />
          </DockLayout>
        </StackLayout>
        
      </ListView.itemTemplate>

    </ListView>

  </StackLayout>

</Page>