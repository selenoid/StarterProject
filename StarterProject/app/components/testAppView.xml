
<Page loaded="pageLoaded">
  <StackLayout cssClass="container">
    <Button tap="{{getNewNumber}}" horizontalAlignment="center"  text="Get New Number" cssClass="actionButton" />

    <StackLayout orientation="horizontal" horizontalAlignment="center" verticalAlignment="center" minHeight="50">
      <Label text="{{'Nu Integer: ' + nuInteger}}" cssClass="infoLabel" horizontalAlignment="left"/>
      <Label text="{{'Old Integer: ' + oldInteger}}" cssClass="infoLabel" horizontalAlignment="right" />
    </StackLayout>
    <Button tap="send" horizontalAlignment="center"  text="Send" cssClass="actionButton" />
  </StackLayout>
</Page>