
<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" >
  <StackLayout cssClass="container">
    <Label text="" horizontalAlignment="center" height="30px;"/>
    <!--Label text="{{'  ' + initialValue}}" horizontalAlignment="center" cssClass="infoLabel subPage" />
    <Button tap="{{actionGo}}" horizontalAlignment="center"  text="Go" cssClass="actionButton" /-->
    <TextField width="300px" text="{{txtKeyword}}" hint="search keyword" cssClass="searchBox" />
    <Button text="Search"  horizontalAlignment="center" height="50px"  tap="{{ getImages }}"/>
    <ListView items="{{ listImages }}" cssClass="viewList">
      <ListView.itemTemplate>
        <StackLayout cssClass="image" padding="0 5px 5px 5px">
          <Image stretch="fill" height="200px" src="{{img}}"  />
          <Label width="300px" text="{{txtKeyword}}" horizontalAlignment="center" cssClass="label" />
        </StackLayout>
      </ListView.itemTemplate>
    </ListView>
  </StackLayout>

</Page>